<style-scheme id="mrpdaemon" _name="mrpdaemon" version="1.0">

  <author>Mark Pariente</author>
  <_description>My preferred coding theme</_description>

  <!-- The Palette -->
  <color name="blue1"                       value="#000090"/>
  <color name="blue2"                       value="#86ABD9"/>
  <color name="red1"                        value="#661709"/>
  <color name="brown1"                      value="#553500"/>
  <color name="green1"                      value="#005200"/>
  <color name="gray1"                       value="#505050"/>
  <color name="gray2"                       value="#DCDCDC"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="#black" background="#white"/>
  <style name="selection"                   foreground="#white" background="blue2"/>
  <style name="cursor"                      foreground="#black"/>
  <style name="current-line"                background="gray2"/>
  <style name="line-numbers"                foreground="gray1" background="#white"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="#white" background="blue2"/>
  <style name="bracket-mismatch"            foreground="#white" background="#red"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="green1"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="red1"/>    
  <style name="def:string"                  foreground="brown1"/>
  <style name="def:special-char"            foreground="brown1"/>
  <style name="def:special-constant"        foreground="red1"/>
  <style name="def:floating-point"          foreground="red1"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue1" bold="true"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="blue1" bold="false"/>

  <!-- Types -->
  <style name="def:type"                    foreground="blue1" bold="true"/> 

  <!-- Others -->
  <style name="def:keyword"                 foreground="blue1" bold="true"/> 
  <style name="def:preprocessor"            foreground="blue1" bold="true"/>
  <style name="def:error"                   background="#red" bold="false"/>
  <style name="def:underlined"              underline="true" bold="false"/>
 
</style-scheme>
